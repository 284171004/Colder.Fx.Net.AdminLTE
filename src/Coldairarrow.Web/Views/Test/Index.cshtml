@using Coldairarrow.Entity.Base_SysManage;
@using Coldairarrow.Util;

@{
    Layout = "~/Views/Shared/_Layout_Form.cshtml";
}

<link href="~/Scripts/vendor/select2/select2.min.css" rel="stylesheet"/>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet"/>
<script src="~/Scripts/vendor/select2/select2.min.js"></script>
<script src="~/Scripts/vendor/select2/i18n/zh-CN.js"></script>

<div style="padding:15px;padding-right:45px;">
    <form id="form" class="form-horizontal" role="form">
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label">连接名</label>
            <div class="col-sm-5">
                <input name="LinkName" type="text" class="form-control" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label">角色</label>
            <div class="col-sm-5">
                <select id="roleList" class="selectpicker form-control" name="roleList" multiple data-style="btn-default btn-sm" data-live-search="true"></select>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group">
            <button id="submit" type="submit" class="hidden">提交</button>
        </div>
    </form>
</div>
<script>
    $(function () {
        $('#roleList').selectpicker({
            url: '/Base_SysManage/Base_User/GetDataList_NoPagin',
            //value: roleIds,
            valueField: 'UserId',
            textField: 'RealName',
            onInput: function (log) {
                console.log(log);
            }
        });
    });
</script>
