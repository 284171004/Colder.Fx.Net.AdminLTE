
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ZTree</title>

    <script src="~/Scripts/vendor/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.ztree.all-3.5.js"></script>
    <link href="~/Content/zTree.theme.metro.css" rel="stylesheet" />
</head>
<body>
    <div>
        <ul id="treeDemo" class="ztree"></ul>
    </div>

    <script>
        var zTreeObj;
        // zTree 的参数配置，深入使用请参考 API 文档（setting 配置详解）
        var setting = {
            check: {
                enable: true,
                chkboxType: { "Y": "ps", "N": "ps" }
            }
        };
        var zNodes = [
            {
                name: "test1", open: true, children: [
                    { name: "test1_1" },
                    { name: "test1_2" }
                ]
            },
            {
                name: "test2", open: true, children: [
                    { name: "test2_1" },
                    { name: "test2_2" }
                ]
            }
        ];
        // zTree 的数据属性，深入使用请参考 API 文档（zTreeNode 节点数据详解）
        $(document).ready(function () {
            zTreeObj = $.fn.zTree.init($("#treeDemo"), setting, zNodes);
            $('[data-role="ztree"]').showZTreeDrop();
        });
    </script>
</body>
</html>
